{% extends 'base.html.twig' %}

{% block title %}Region index{% endblock %}

{% block main %}
    <h1>Choisie une des Regions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Presentation</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
               
                <td>{{ region.name }}</td>
                <td>{{ region.presentation }}</td>
                <td>{{ region.country }}</td>
                <td>
                  
                    <a href="{{ path('region_show', {'id': region.id}) }}">show</a></td>
             <td>  
             {% if is_granted('ROLE_USER') %}
             
               <a href="{{ path('region_edit', {'id': region.id}) }}">edit</a>
               {% endif %}
                </td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('region_new') }}">Create new</a>
{% endblock %}
