{% extends 'base.html.twig' %}

{% block title %}Region{% endblock %}

{% block main %}
    <h1>Region</h1>

    <h2>Rooms</h2>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                
                <th>Adress</th>
                <th>Summary</th>
                <th>Link</th>
                
            </tr>
        </thead>
        <tbody>
        {% for room in region.room %}
            <tr>
            
              
                
                <td>
                {{ room.address }}
                </td>
                
                <td>{{ room.summary }}</td>
                <td>
                    <a href="{{path('room_show', {'id': room.id }) }}">
                    Show
                    </a>
                </td>
            
            </tr>
        {% endfor %} {# rooms #}
        
        </tbody>
    </table>

    <a href="{{ path('region_index') }}">back to list</a>
  {% if is_granted('ROLE_USER') %}
    <a href="{{ path('region_edit', {'id': region.id}) }}">edit</a> 
    {{ include('region/_delete_form.html.twig') }}
{% endif %}
  
   
     
{% endblock %}
